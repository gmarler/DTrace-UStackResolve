  if ( $ustack_resolve_pids_cache->get( $href ) ) {
    say "cache entry exists";
    $ustack_resolve_pids_cache->remove( $href );
  } else {
    say "cache entry DOES NOT EXIST";
    $ustack_resolve_pids_cache->set( $href, {}, '7 days' );
  }
}

