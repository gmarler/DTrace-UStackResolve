my $file_paths_f = fmap {
  my ($aref) = @_;
  my ($pid, $start_epoch) = @$aref;
  say "Obtaining list of dynamic libs for PID $pid";
  Future->done( $pmap_func->call( args => [ $pid, $start_epoch ] )->get );
} foreach => [ map { [ $_, $pids_start_href{$_} ] } keys %pids_start_href ],
  concurrent => 8;

